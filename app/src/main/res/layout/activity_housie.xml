                android:backgroundTint="#f3f3f3"
                android:fontFamily="@font/ps"
                android:gravity="center"
                android:padding="10dp"
                android:text="92"
                android:textColor="@color/dark_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="50dp"
